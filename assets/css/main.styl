@font-face
	font-family omnesR
	src url(../fonts/Omnes.otf)
	font-style normal
	
@font-face
	font-family omnesL
	src url(../fonts/Omnes-Light.otf)
	font-style normal
	
@font-face
	font-family omnesM
	src url(../fonts/Omnes-Medium.otf)
	font-style normal
	
$red = #ff445c
$orange = #f4695c
$gray = #555555
	
body
	font-family omnesR
	font-size 14px
	color $gray
	
figure
	margin 0

p
	font-family omnesL
	margin-top 30px
	margin-bottom 30px
	font-size 16px
	line-height 24px
	color $gray

h1
	color $gray
	font-family omnesM
	font-size 40px

h2
	font-weight normal
	font-size 24px
	color white
	font-family omnesL
	line-height 30px
	letter-spacing 1px
	@media(max-width: 576px)
		font-size 20px
		
h3
	font-weight normal
	font-size 29px
	font-family omnesM

h1,h2,h3,h4,button
	font-weight normal
	
input:focus
	outline none

input
	margin 0

button
	font-family omnesM
	font-size 14px
	font-weight normal
	padding 13px 60px
	background white
	border 1px solid black
	text-transform uppercase
	transition all .25s ease
	&:active,&:focus
		outline none
	&:hover
		cursor pointer
		background black
		color white
	&.red
		border-color #ff7474
		color #ff7474
		&:hover
			background #ff7474
			color white
	&.white
		border-color white
		color white
		&:hover
			background white
			color $red
	&.round
		border-radius 60px
	&.transparent
		background-color rgba(0,0,0,0)

a
	text-decoration none
	&:hover
		text-decoration underline

.container
	padding-right: 30px;
	padding-left: 30px;
	margin-right: auto;
	margin-left: auto;
	width 902px
	@media (max-width: 992px)
		width unset

.container-fluid
	padding-right: 30px;
	padding-left: 30px;
	margin-right: auto;
	margin-left: auto;
	width 1048px
