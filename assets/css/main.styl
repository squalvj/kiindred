@font-face
	font-family omnesR
	src url(../fonts/Omnes.otf)
	font-style normal
	
@font-face
	font-family omnesL
	src url(../fonts/Omnes-Light.otf)
	font-style normal
	
@font-face
	font-family omnesM
	src url(../fonts/Omnes-Medium.otf)
	font-style normal
	
$red = #ff445c
$orange = #f4695c
$gray = #555555
	
body
	font-family omnesR
	font-size 14px
	color $gray

p
	font-family omnesL
	margin-top 30px
	margin-bottom 30px
	font-size 16px
	line-height 24px
	color $gray

h1
	color $gray
	font-family omnesM
	font-size 40px

h2
	font-weight normal
	font-size 24px
	color white
	font-family omnesL
	line-height 30px
	letter-spacing 1px
	@media(max-width: 576px)
		font-size 20px
		
h3
	font-weight normal
	font-size 29px
	font-family omnesM

button
	font-family omnesM
	font-size 14px
	font-weight normal
	padding 13px 60px
	background white
	border 1px solid black
	text-transform uppercase
	transition all .25s ease
	&:hover
		cursor pointer
		background black
		color white
	&.red
		border-color #ff7474
		color #ff7474
		&:hover
			background #ff7474
			color white
	&.round
		border-radius 60px
	&.transparent
		background-color rgba(0,0,0,0)



.container
	padding-right: 30px;
	padding-left: 30px;
	margin-right: auto;
	margin-left: auto;
	width 902px
	@media (max-width: 992px)
		width unset
		
.outer-container
	height 100vh
	@media(max-width: 576px)
		min-height 100vh
		height auto



.rel
	position relative

.flex
	display flex
	@media(max-width: 576px)
		flex-wrap wrap

.flex-col
	display flex
	flex-direction column

.wrap
	flex-wrap wrap

.v-center
	align-items center

.space-b
	justify-content space-between

.text-center
	text-align center
// welcome section----
.welcome-section
	background url(../img/bg-top.jpg)
	background-repeat no-repeat
	background-size cover
	background-position center
.logo-welcome
	width 240px
	height auto
	@media(max-width: 576px)
		width 220px
.wrapper-welcome
	h2
		font-weight normal
		font-size 24px
		color white
		font-family omnesL
		margin-top 60px
		line-height 30px
		letter-spacing 1px
		@media(max-width: 576px)
			font-size 20px
			margin-top 30px
.arrow-welcome
	position absolute
	left calc(50% - 13px)
	bottom 70px
	transform translateY(-50%)
	@media(max-width: 576px)
		bottom 20px
		
// about
.wrapper-phone
	width 100px
	img
		position absolute
		top -210px
		left -70px
.wrapper-about-text
	height 100%
	img
		margin 40px 0
.about-gradient
	min-height 235px
	h2
		text-align right
.gradient
	background linear-gradient($orange, $red)
	
// bg-long
.wrapper-bg-long
	background url(../img/bg-long.png)
	background-size cover
	min-height calc(100vh * 5)
	background-position 0px -150px
	
.wrapper-text
	padding 100px 0

.col
	width 50%
	@media(max-width: 576px)
		width 100%

.red-t
	color #ff7474

// portofolio
.portofolio-caption
	h3
		margin-bottom 0
	p
		margin 20px 0 60px
.portofolio-mobile-app
	@media(max-width: 576px)
		margin-top 50px
	img
		width 100%
		height auto


